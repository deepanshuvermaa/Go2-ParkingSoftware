{
  "expo": {
    "name": "Go2-ParkingSoftware",
    "slug": "go2-parkingsoftware",
    "version": "1.0.0",
    "scheme": "go2parking",
    "orientation": "portrait",
    "owner": "",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": ""
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.go2.parkingsoftware",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Go2 Parking uses Bluetooth to connect with receipt printers.",
        "NSBluetoothPeripheralUsageDescription": "Go2 Parking needs Bluetooth access to communicate with printers.",
        "NSLocationWhenInUseUsageDescription": "Go2 Parking uses location to improve Bluetooth device discovery.",
        "NSUserTrackingUsageDescription": "We use your device identifier to keep your session secure across devices."
      }
    },
    "android": {
      "package": "com.go2.parkingsoftware",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      }
    },
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Allow Go2 Parking to use Bluetooth to connect with printers.",
          "bluetoothPeripheralPermission": "Allow Go2 Parking to communicate with printers while in use."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": ""
      },
      "apiBaseUrl": "https://api.go2parking.example",
      "sentryDsn": ""
    }
  }
}
